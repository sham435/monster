{
  "name": "monster-code-cli",
  "version": "1.0.0",
  "description": "Monster Code - Agentic coding tool that lives in your terminal, understands your codebase, and helps you code faster by executing routine tasks, explaining complex code, and handling git workflows - all through natural language commands",
  "main": "src/index.js",
  "bin": {
    "monster": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "build": "node scripts/build-apple-silicon.js",
    "build-dmg": "./scripts/create-persistent-dmg.sh",
    "dev": "cd ui && npm run dev",
    "build:ui": "cd ui && npm run build",
    "start:ui": "cd ui && npm run start",
    "lint": "cd ui && npm run lint",
    "backend:dev": "cd backend && npm run start:dev",
    "backend:build": "cd backend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "doctor": "node src/cli.js doctor"
  },
  "keywords": [
    "cli",
    "development",
    "apple-silicon",
    "m4-pro",
    "optimization",
    "macos",
    "dmg",
    "installer",
    "agentic-coding",
    "ai-coding",
    "code-assistant",
    "natural-language",
    "git-workflows",
    "codebase-understanding"
  ],
  "author": "sham435",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.0.0",
    "@nestjs/websockets": "^11.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "next": "^16.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io-client": "^4.7.4",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.9.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.6",
    "tailwindcss": "^4.0.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "pkg": "^5.8.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nestjs/schematics": "^11.0.0"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "package.json"
    ],
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  }
}
